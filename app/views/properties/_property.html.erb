<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= link_to property do %>
        <%= image_tag property.image.url(:medium), style: 'width:100%; height: 200px;' %>
        <div class="caption">
          <h3><%= property.title %>
            <small>
              <%= number_to_currency property.price, unit: '$' %> -
              <%= property.listing_type %>
            </small>
          </h3>

          <p><%= property.description.to_s.truncate(900) %></p>

          <p>
            <%= "#{property.city}-#{property.country}" %>
          </p>
        </div>
    <% end %>
  </div>
</div>
