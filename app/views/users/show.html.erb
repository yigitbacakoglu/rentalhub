<h2><%= @user.fullname %></h2>
<div class="well">
  <p><%= @user.description %></p>
</div>

<div class="well">
  <fieldset>
    <legend>Associated Properties</legend>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
      <% @user.properties.each do |property| %>
          <tr>
            <td><%= image_tag property.image.url(:thumb), width: 100, height: 100 %></td>
            <td>
              <%= link_to property.title, property_path(property) %>
              <br/>
              <%= property.location %>
            </td>
            <td><%= number_to_currency property.price %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </fieldset>
</div>